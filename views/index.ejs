<%include ./partials/header %>
<div class="ui main text container">
	<div class="ui huge header">RESTful Blog App</div>
	<div class="ui top attached segment">
		<div class="ui divided items">
			<%blogs.forEach(function(blog){ %>
				<div class="item">
					<a href="/blogs/<%= blog._id %>">
					<div class="ui middle aligned medium spaced rounded image">
						<img src="<%= blog.image %>">
					</div>	
					</a>
					<div class="content">
						<a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
						<div class="meta">
							<span><%= blog.created.toDateString() %></span>
						</div>	
						<div class="description">
							<p><%- blog.body.substring(0,100) %>...</p> 
						</div>
						<div class="extra">
							<a class="ui floated basic blue button" href="/blogs/<%= blog._id  %>">
								Read More
								<i class="right chevron icon middle aligned"></i>
							<a>
						</div>
					</div>	
				</div>
			<%}); %>	

		</div>
	</div>
</div>



<%include ./partials/footer %>
